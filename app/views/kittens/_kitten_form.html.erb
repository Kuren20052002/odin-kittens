<%= form_with model: kitten do |form| %>
  <div>
    <%= form.label :name%>
    <%= form.text_field :name%>
  </div>

  <div>
    <%= form.label :age%>
    <%= form.number_field :age%>
  </div>

  <div>
    <%= form.label :cuteness, "Cuteness Level (1-10)"%>
    <%= form.number_field :cuteness%>
  </div>  

  <div>
    <%= form.label :softness, "Softness Level (1-10)"%>
    <%= form.number_field :softness%>
  </div>  

  <div>
    <%= form.submit "Save Kitten"%>
  </div>
<% end %>